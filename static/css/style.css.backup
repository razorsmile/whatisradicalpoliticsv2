/* ===== ACCESSIBILITY STYLES ===== */

/* Skip to main content link */
.skip-link {
  position: absolute;
  top: -40px;
  left: 0;
  background: var(--autumn-burnt-orange);
  color: white;
  padding: 8px 16px;
  text-decoration: none;
  font-weight: bold;
  z-index: 1000;
  border-radius: 0 0 4px 0;
}

.skip-link:focus {
  top: 0;
}

/* Screen reader only content */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Enhanced focus indicators for keyboard navigation */
*:focus {
  outline: 3px solid var(--autumn-terracotta);
  outline-offset: 2px;
}

/* Specific focus styles for interactive elements */
a:focus,
button:focus {
  outline: 3px solid var(--autumn-terracotta);
  outline-offset: 2px;
  box-shadow: 0 0 0 3px rgba(224, 122, 64, 0.2);
}

/* Ensure dropdown menu items are keyboard accessible */
.dropdown-menu li a:focus {
  background: #f0f0f0;
  outline: 2px solid var(--autumn-terracotta);
}

/* Improved link contrast */
a {
  color: var(--autumn-sienna);
}

a:hover {
  color: var(--autumn-burnt-orange);
}

/* Exception for navigation links - they need white text on dark background */
.nav-links a {
  color: white !important;
}

.site-title a,
.footer a {
  color: inherit;
}

/* Ensure sufficient color contrast for text on colored backgrounds */
.hero-content h1,
.session-hero h1,
.week-badge {
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}
