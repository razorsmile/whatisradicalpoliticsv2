}

.session-card-link[data-week="2"] .session-lens {
  color: var(--autumn-forest);
}

.session-card-link[data-week="3"] .session-lens {
  color: var(--autumn-ochre);
}

.session-card-link[data-week="4"] .session-lens {
  color: var(--autumn-burgundy);
}

.session-card p:last-child {
  color: #555;
  line-height: 1.6;
  margin: 0;
  flex-grow: 1;
}

/* Responsive grid for sessions */
@media (min-width: 768px) and (max-width: 1199px) {
  .sessions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1200px) {
  .sessions-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* ========================================
   MOBILE HAMBURGER MENU
   ======================================== */

/* Hide mobile menu on desktop */
.mobile-menu {
  display: none;
}

.mobile-nav {
  display: none;
}

.menu-bg {
  display: none;
}

/* Mobile menu styles (shown only on mobile) */
@media (max-width: 768px) {
  /* Show mobile hamburger, hide desktop nav */
  .mobile-menu {
    display: block;
    z-index: 3;
    position: relative;
  }

  .nav {
    display: none !important;
  }

  /* Hamburger icon */
  .menu-bar {
    width: 45px;
    height: 40px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 6px;
  }

  .bar {
    height: 4px;
    width: 100%;
    background-color: white;
    border-radius: 3px;
    transition: 0.3s ease;
  }

  /* Hamburger animation to X */
  .menu-bar.change .bar {
    background-color: white;
  }

  .menu-bar.change #bar1 {
    transform: translateY(10px) rotate(-45deg);
  }

  .menu-bar.change #bar2 {
    opacity: 0;
  }

  .menu-bar.change #bar3 {
    transform: translateY(-10px) rotate(45deg);
  }

  /* Mobile navigation menu */
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 2;
    display: none;
    padding-top: 100px;
  }

  .mobile-nav.change {
    display: block;
  }

  .mobile-nav-links {
    list-style: none;
    padding: 0 30px;
    margin: 0;
  }

  .mobile-nav-links li {
    padding: 20px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-nav-links li a {
    color: white;
    font-size: 1.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }

  .mobile-nav-links li a:hover {
    opacity: 0.8;
  }

  /* Circular expanding background */
  .menu-bg {
    display: block;
    position: fixed;
    top: 20px;
    left: 20px;
    width: 0;
    height: 0;
    background: var(--autumn-burnt-orange);
    border-radius: 50%;
    transition: 0.4s ease;
    z-index: 1;
  }

  .menu-bg.change-bg {
    width: 150vw;
    height: 150vh;
    transform: translate(-50%, -50%);
  }
}

